<h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p>
<p>
  From:  <%= @flight.from_airport.full_name%><br>
  To:  <%= @flight.to_airport.full_name%><br>
  At:  <%= @flight.depart_at%><hr>
</p>
<% @flight_id = 3 %>
<%#= form_for @booking, url: '/',method: :get do |f| %>
<%= form_for @booking do |f| %>
  <%= f.hidden_field :flight_id, value: @flight.id%>
  <%= f.fields_for :tickets do |t| %>
    <%= t.fields_for :passenger do |p| %>
      <%= p.label :name %>
      <%= p.text_field :name %>
      <%= p.label :email %>
      <%= p.email_field :email%>
    <% end %><br>
  <% end %>
  <%= f.submit %>
<% end %>

<% flash[:info] = params%>
<%= params %>
